%h1 Keyword: "#{keyword}"
%h2#caption
#photos
  - photos.each do |photo|
    .photo
      = image_tag(photo[:image_url], title: truncate(photo[:name], :length => 30))
:javascript
  $(function() {
    var slider = $("#photos").bxSlider({
      mode: "fade",
      speed: 1000,
      infiniteLoop: false,
      controls: false,
      captions: true,
      captionsSelector: $("#caption"),
      auto: true,
      onLastSlide: function() {
        $.get("/latest", function(response) {
          slider.stopShow();
          window.setTimeout(function() {
            slider.destroyShow();
            $("#caption").html("");
            $(".photos").html(response)
          }, 2000);
        })
      }
    });
  });
